<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

<!-- Servlets -->
<servlet>
    <servlet-name>amsterdamServlet</servlet-name>
    <servlet-class>gima.neo4j.testsuite.server.AmsterdamServiceImpl</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>amsterdamServlet</servlet-name>
    <url-pattern>/tests/amsterdam</url-pattern>
</servlet-mapping>

<!-- Default page to serve -->
<welcome-file-list>
    <welcome-file>tests.html</welcome-file>
</welcome-file-list>

</web-app>
